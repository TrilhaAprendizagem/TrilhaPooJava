<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <!-- Configure the URL to use file-based H2 database -->
        <property name="hibernate.connection.url">jdbc:h2:file:<"completeocaminho">/escola2/demo/src/persistence/db</property>
        <property name="hibernate.connection.username">bdteste</property>
        <property name="hibernate.connection.password">teste</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>

        <!-- Add annotated classes -->
        <mapping class="com.br.rp.escola.Aluno"/>
        <mapping class="com.br.rp.escola.Aula"/>
        <mapping class="com.br.rp.escola.Curso"/>
        <mapping class="com.br.rp.escola.Disciplina"/>
        <mapping class="com.br.rp.escola.Professor"/>
        <mapping class="com.br.rp.escola.Turma"/>
    </session-factory>
</hibernate-configuration>
